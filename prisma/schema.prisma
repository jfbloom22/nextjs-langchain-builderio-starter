generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(uuid())
  email         String          @unique
  name          String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  clerkId       String          @unique
  ThreadHistory ThreadHistory[]
  Stores        Store[]
}

model ThreadHistory {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  threadId  String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  message   String   @db.Text
  status    String
}

// simple schema for a farm inventory will include a table for each farm and an inventory table with products in it.  Each product will have a name, type, and a meta jsonb field.
// Store represents the physical location of a store.  A user can have multiple stores.
model Store {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  product   Product[]
}

// inventory represents things like Steers, corn, wheat, etc.

model Product {
  id        String   @id @default(uuid())
  name      String
  type      String
  meta      Json?
  location  String?
  quantity  Int      @default(0)
  unit      String?
  price     Float    @default(0)
  storeId   String
  store     Store    @relation(fields: [storeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
